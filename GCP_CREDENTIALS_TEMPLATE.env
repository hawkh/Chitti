# GCP Project Configuration
GCP_PROJECT_ID=your-project-id-here
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Service Account (Download from GCP Console)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Cloud SQL (PostgreSQL)
DB_HOST=10.x.x.x  # Get from: gcloud sql instances describe chitti-postgres
DB_PORT=5432
DB_NAME=chitti_ndt
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://postgres:your-password@10.x.x.x:5432/chitti_ndt

# Cloud Storage
GCS_BUCKET=chitti-ndt-storage-your-project-id
CDN_URL=https://storage.googleapis.com/chitti-ndt-storage-your-project-id

# Redis (Memorystore)
REDIS_HOST=10.x.x.x  # Get from: gcloud redis instances describe chitti-redis
REDIS_PORT=6379
REDIS_URL=redis://10.x.x.x:6379

# JWT Secret (Generate a strong random string)
JWT_SECRET=generate-a-strong-random-secret-key-here

# RabbitMQ (Deploy on GKE or use CloudAMQP)
RABBITMQ_URL=amqp://admin:password@rabbitmq-service:5672

# Monitoring
PROMETHEUS_URL=http://prometheus-service:9090
GRAFANA_URL=http://grafana-service:3000

# Application URLs (After deployment)
API_GATEWAY_URL=http://LOAD_BALANCER_IP
NEXT_PUBLIC_API_URL=http://LOAD_BALANCER_IP/api

# Docker Registry
DOCKER_REGISTRY=gcr.io/your-project-id

# Kubernetes
K8S_CLUSTER_NAME=chitti-cluster
K8S_NAMESPACE=default
